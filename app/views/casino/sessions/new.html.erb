<% login_notice = t('login.notice', default: '') %>
<div class="container">
  <% unless login_notice.blank? %>
  <div class="notice box">
    <i class="icon-info"></i> <%= login_notice %>
  </div>
  <% end %>
  <div class="login box">
    <%= render 'messages' %>
    <div class="logo">
       <%= image_tag "logo.png" %>
    </div>

    <div class="form">
      <%= form_tag(login_path, method: :post, id: 'login-form') do %>
        <%= hidden_field_tag :lt, CASino::LoginTicket.create.ticket %>
        <%= hidden_field_tag :service, params[:service] unless params[:service].nil? %>
        <%= label_tag :username, '用户名' %>
        <%= text_field_tag :username, params[:username], autofocus:true %>
        <%= label_tag :password, '密码' %>
        <%= link_to "(忘记密码)", '/password_resets/new' %>
        <%= password_field_tag :password %>
        <%= label_tag :rememberMe do %>
          <%= check_box_tag :rememberMe, 1, params[:rememberMe] %> <%= '保持登录' %>
        <% end %>
        <%= button_tag '登录', :class => 'button' %>
      <% end %>
    </div>
      <% if params[:service].nil? %>
        <%= link_to "注册", "/users/new"%>
      <% else %>
        <%= link_to "注册", "/users/new?service="+params[:service]%>
      <% end %>
  </div>
  <%= render 'footer' %>
</div>
