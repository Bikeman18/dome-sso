<div class="container">

    <div class="box">
      <h3>通过手机注册</h3>
        <div class="form">
            <div class="col-md-6 col-md-offset-3">
                <%= form_for @user, :url => {:action => "new_by_phone"} do |f| %>
                <%= render 'shared/error_messages' %>
                <%= hidden_field_tag :service, params[:service] unless params[:service].nil? %>
                <%= f.label :name, '用户名' %>
                <%= f.text_field :name , class: 'form-control'%>

                <%= f.label :phone, '手机' %>
                <%= f.phone_field :phone , class: 'form-control'%>
                <%= label_tag 'captcha', '图形验证码' %>
                <div class="input-wrapper">
                  <%= rucaptcha_input_tag(id:'captcha',class: 'form-control', placeholder: '输入图形验证码') %>
                  <%= rucaptcha_image_tag(class: 'captcha', alt: '验证码') %>
                </div>
                <%= button_tag "获取短信验证码", :type => 'button', :class => "subBtn", :id => "phone_verification" %>
                <%= label_tag 'pin', '短信验证码' %>
                <%= text_field_tag :pin, params[:pin]%>
                <%= f.label :password, '密码' %>
                <%= f.password_field :password , class: 'form-control'%>

                <!-- <div class="field">
                    <%= f.label :avatar do %>
                    <%= f.file_field :avatar %>
                    <%= f.hidden_field :avatar_cache %>
                    <% end %>
                </div> -->

                <%= f.submit "创建账户", class: "button" %>
                <% end %>
            </div>
        </div>
    </div>
