<div class="container">
  <h3>注册</h3>

  <div class="form">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user, :url => {:action => "new_by_phone"} do |f| %>
        <%= render 'shared/error_messages' %>
        <%= hidden_field_tag :service, params[:service] unless params[:service].nil? %>
        <%= f.label :name, '用户名' %>
        <%= f.text_field :name , class: 'form-control'%>

        <%= f.label :phone, '手机' %>
        <%= f.phone_field :phone , class: 'form-control'%>

        <%= rucaptcha_input_tag(id:'captcha',class: 'form-control', placeholder: '输入图形验证码') %>
        <%= rucaptcha_image_tag(class: 'captcha', alt: '验证码') %>
        <%= button_tag "获取手机验证码", :type => 'button', :class => "subBtn", :id => "phone_verification" %>
        <%= text_field_tag :pin, params[:pin], autofocus:true %>
        <%= f.label :password, '密码' %>
        <%= f.password_field :password , class: 'form-control'%>

        <div class="field">
            <%= f.label :avatar do %>
              <%= f.file_field :avatar %>
              <%= f.hidden_field :avatar_cache %>
            <% end %>
          </div>

        <%= f.submit "创建账户", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
