<div class="container">
  <h1>注册</h1>

  <div class="form">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= hidden_field_tag :service, params[:service] unless params[:service].nil? %>
        <%= f.label :name, '用户名' %>
        <%= f.text_field :name , class: 'form-control'%>

        <%= f.label :phone, '手机' %>
        <%= f.phone_field :phone , class: 'form-control'%>

        <%= rucaptcha_input_tag(id:'captcha',class: 'form-control', placeholder: '输入验证码') %>
        <%= rucaptcha_image_tag(class: 'captcha', alt: '验证码') %>
        <%= button_tag "获取手机验证码", :type => 'button', :class => "subBtn", :id => "phone_verification" %>
        <%= f.label :password, '密码' %>
        <%= f.password_field :password , class: 'form-control'%>

        <%= f.submit "创建账户", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
