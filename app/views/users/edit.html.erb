<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <div class="field">
          <%= f.label :avatar do %>
            <%= f.file_field :avatar %>
            <%= f.hidden_field :avatar_cache %>
          <% end %>
        </div>
      <%= f.fields_for :user_extra, @user.user_extra  do |ff| %>
        <%= ff.label :fullname %>
        <%= ff.text_field :fullname, class: 'form-control' %>

        <%= ff.label :birthday %>
        <%= ff.date_select :birthday, class: 'form-control' %>

        <%= ff.label :identity_card %>
        <%= ff.date_select :identity_card, class: 'form-control' %>
      <% end %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
